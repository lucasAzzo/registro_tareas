{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div id="login-page" class="row">
        <div class="col s12 z-depth-4 card-panel">
            <div class="row">
                <div class="input-field col s12 center">
                    <i class="material-icons large">done_all</i><br>
                    <span class="logo-text">REGISTRO TAREAS</span>
                </div>
            </div>
                {% if error %}
                    <div id="card-alert" class="card cyan">
                        <div class="card-content white-text">
                            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        </div>
                        <button type="button" class="close white-text" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                {% endif %}
                <form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <div class="row margin">
                        <div class="input-field col s12">
                            <i class="material-icons prefix pt-5">person_outline</i>
                            <input id="username" type="text" id="username" name="_username" value="{{ last_username }}" required="required">
                            <label for="username" class="center-align">Usuario</label>
                        </div>
                    </div>
                    <div class="row margin">
                        <div class="input-field col s12">
                            <i class="material-icons prefix pt-5">lock_outline</i>
                            <input id="password" type="password" id="password" name="_password" required="required">
                            <label for="password">Contraseña</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m12 l12 ml-2 mt-3">
                            <input type="checkbox" class="filled-in" id="remember_me" name="remember_me" checked="checked"/>
                            <label for="remember_me">Recuérdeme</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input class="btn red darken-1 waves-effect waves-light col s12" type="submit" id="_submit" name="_submit" value="Ingresar" />
                        </div>
                    </div>
                    <br><br>
            </form>
            </div>
        </div>
{% endblock fos_user_content %}